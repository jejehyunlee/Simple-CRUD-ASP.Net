@model Asp.NETMVCCRUD.Models.Employee
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Employee", FormMethod.Post, new {onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.EmployeeID)
    <div class="form-group">
        @Html.LabelFor(model => model.Nama, new { @class = "control-label" })
        @Html.EditorFor(model => model.Nama, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nama)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Tgl_prod, new { @class = "control-label" })
        @Html.EditorFor(model => model.Tgl_prod, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Tgl_prod)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Shift, new { @class = "control-label" })
        @Html.EditorFor(model => model.Shift, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Kode_prod, new { @class = "control-label" })
        @Html.EditorFor(model => model.Kode_prod, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        
        @Html.LabelFor(model => model.Jumlah, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">Kg</span>
            @Html.EditorFor(model => model.Jumlah, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary"  />
        <input type="reset" value="Reset" class="btn" />
    </div>
}